extends layout
block content
 h1= title
 if (toShow == null)
  h2 No instance to delete
 else
  - let cerealid = toShow._id
  - let cerealBrandName = toShow.cerealBrandName
  - let price = toShow.price
  - let cerealFlavor = toShow.cerealFlavor
  - let actionid = "/resource/cereal/" + cerealid
  script let actionid = "#{actionid}"
  div
   div.row
    div(class='costumeAttr mr-3') Cereal ID is:
    div #{cerealid}
   div.row
    div(class='costumeAttr mr-3') Cereal BrandName is:
    div #{cerealBrandName}
   div.row
    div(class='costumeAttr mr-3') Cereal Flavor is:
    div #{cerealFlavor}
   div.row
    div(class='costumeAttr mr-3') Cereal Price is:
    div #{price}
  button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete
  button(class="btn btn-secondary m-2" onclick="cancel()") Cancel
 script.
  function cancel() {
  // Go back to the home page for the Cereal collection
  window.location.href='/cereal'
  }
 script.
